@model DevSys.Gesinv.UI.Models.ViewModels.IngresoViewModel

@{
    ViewData["Title"] = "Detalles de Ingreso";
}

<h1>Detalles de Ingreso</h1>

<div>
    <h4>Ingreso de Producto</h4>
    <div class="row justify-content-center">

        <div class="col-10">
            <div class="card">
                <div class="card-body">

                    <div class="row">
                        <div class="form-group col-3">
                            <label class="control-label">Codigo Ingreso</label>
                            <p class="form-control">
                                @Model.CodigoIngreso
                            </p>
                        </div>
                        <div class="form-group col-3">
                            <label class="control-label">Tipo de Ingreso</label>
                            <p class="form-control">
                                @Model.TipoIngreso
                            </p>
                        </div>
                        <div class="form-group col-3">
                            <label class="control-label">Bodega</label>
                            <p class="form-control">
                                @Model.Bodega
                            </p>
                        </div>
                        <div class="form-group col-3">
                            <label class="control-label">Fecha</label>
                            <p class="form-control">
                                @Model.Fecha
                            </p>
                        </div>
                        <div class="form-group col-3">
                            <label class="control-label">Proveedor</label>
                            <p class="form-control">
                                @Model.Proveedor
                            </p>
                        </div>
                    </div>

                    <div class="row">

                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th scope="col">Codigo</th>
                                    <th scope="col">Producto</th>
                                    <th scope="col">Fecha Ingreso</th>
                                    <th scope="col">Cajas</th>
                                    <th scope="col">T/Cajas</th>
                                    <th scope="col">Cantidad</th>
                                    <th scope="col">Costo Fab</th>
                                    
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.IngresoDetalle)
                                {
                                    <tr>
                                        <td>@item.IngresoDetalleId</td>
                                        <td>@item.ProductoId</td>
                                        <td>@item.IngresoId</td>
                                        <td>@item.PrecioBruto</td>
                                        <td>@item.Fecha</td>
                                        <td>@item.Caja</td>
                                        <td>@item.Cantidad</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    @*    <div class="col-4">
                            <div class="form-group">
                                <label class="control-label">Subtotal</label>
                                <p class="form-control">
                                    @Model.SubTotal
                                </p>*@
                            </div>
                            <div class="form-group">
                                <label class="control-label">Descuento</label>
                                <p class="form-control">
                                    @Model.Descuento
                                </p>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Impuestos</label>
                                <p class="form-control">
                                    @Model.Impuestos
                                </p>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Total</label>
                                <p class="form-control">
                                    @Model.Total
                                </p>
                            </div>

                        </div>

                    </div>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.IngresoId }) |
    <a asp-action="Index">Back to List</a>
</div>
